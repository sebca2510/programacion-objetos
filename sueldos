
package sueldos;

import java.util.Scanner;


public class Sueldos {

    
    public static void main(String[] args) {
        
      Scanner leer  = new Scanner (System.in);
      short cansueldos;
      double acunsueldos;
      double prosueldos;
      double sueldomayor;
      
      acunsueldos=0;
      prosueldos=0;
      sueldomayor=0;
     
       System.out.println("cantidad de sueldos: ");
       cansueldos = leer.nextShort();
       
       double arraysueldos[]=new double[cansueldos];
       
       for(int i=0; i<cansueldos; i++){
           System.out.println("dame el sueldo No "+i+":");
           arraysueldos[i]=leer.nextDouble();
           
        acunsueldos+=arraysueldos[i];
        
       if(arraysueldos[1]>sueldomayor){
       sueldomayor=arraysueldos[1];
       
       }
       
       }
       prosueldos=acunsueldos / cansueldos;
        System.out.println("promedio de suelos: "+prosueldos);
        System.out.println("sueldos mayor: "+sueldomayor);
        System.out.println("posicion del sueldo mayor: ");
    }
   
}
